@model  SGPI.Models.Pago
@{
    ViewData["Title"] = "Pagos";
    Layout = "_LayoutMPE";
}
<nav style="background-color: #f6f5f7;" class="navbar navbar-expand-lg navbar-light fixed-top">
    <div class="container">
        <a class="navbar-brand" href="#">SGPI</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("ActualizarEstudiante", "ActualizarEstudiante", new {IdUsuario = ViewBag.idusuario})
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Pagos", "Pagos", new {IdUsuario = ViewBag.idusuario})
                </li>
            </ul>

            <button type="submit" class="boton1">
                Cerrar Sesion
            </button>


        </div>
    </div>
</nav>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
        </div>



    </div>
</div>


<div class="container1" id="container">
    <div class="form-container sign-in-container">
        <form method="post">
            
        <div class="container" s style=" font-size: 11px;">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id Pago</th>
                            <th>Valor</th>
                            <th>Fecha</th>
                            <th>Estado</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pg in ViewBag.listapgs)
                        {
                            <tr>
                                <td>@pg.IdPago</td>
                                <td>@pg.ValorPago</td>
                                <td>@pg.Fecha</td>
                                <td>@pg.Estado</td>
                            </tr>
                        }
                        <tr>
                            <th scope="row"><input type="text" class="form-control col" id="usuariotxt"/></th>
                            <th scope="row"><input asp-for="ValorPago" type="text" class="form-control col" placeholder="1.000.000" id="usuariotxt" requiered /></th>
                            <th scope="row"><input asp-for="Fecha" type="date" class="form-control col" placeholder="" id="usuariotxt" requiered /></th>
                            <th scope="row">
                                <form action="/action_page.php">
                                    <input type="file" id="img" name="img" accept="image/*">

                                </form>
                            </th>
                        </tr>
                    </tbody>
                </table>
                <br />
                <!--Aca boton-->
                <center><button type="submit" class="btn btn-outline-danger">Pagos</button></center>
            
        </div>
        </form>
    </div>

</div>



