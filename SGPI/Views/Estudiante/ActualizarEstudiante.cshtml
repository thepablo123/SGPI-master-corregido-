@model SGPI.Models.Usuario
@{
    ViewData["Title"] = "ActualizarEstudiamte";
    Layout = "_LayoutMPE";
}

<nav style="background-color: #f6f5f7;" class="navbar navbar-expand-lg navbar-light fixed-top">
    <div class="container">
        <a class="navbar-brand" href="#">SGPI</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("ActualizarEstudiante", "ActualizarEstudiante", new {IdUsuario = Model.IdUsuario})
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Pagos", "Pagos", new {IdUsuario = Model.IdUsuario})
                </li>
            </ul>

            <button type="submit" class="boton1">
                Cerrar Sesion
            </button>


        </div>
    </div>
</nav>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
        </div>



    </div>
</div>


<div class="container1" id="container">
    <div class="form-container sign-in-container">
        <form method="post" class="row g-3">

            <div class="row">
                <div class="col-md-6">
                   <label for="inputState" class="form-label">Tipo de Documento</label>

                 @Html.DropDownList("IdDoc", new SelectList(ViewBag.documento, "IdDoc", "TipoDocumento"), new {@class="form-control dropdown"})              
            </div>
             <div class="col-md-6">
                <label for="inputEmail4" class="form-label">Numero de documento</label>
                    <input asp-for="NumeroDocumento" type="text" class="input1" id="inputtext">
            </div>
            </div>

             <div class="row">
           
           
            <div class="col-md-3">
                <label for="inputPassword4" class="form-label"> 
                    Primer Nombre</label>
                    <input asp-for="PrimerNombre" type="text" class="input1" id="inputtext">
            </div>
            <div class="col-md-3">
                <label for="inputPassword4" class="form-label">Segundo Nombre</label>
                    <input asp-for ="SegundoNombre" type="text" class="input1" id="inputtext">
            </div>
                <div class="col-md-3">
                    <label for="inputAddress" class="form-label">Primer Apellidos</label>
                    <input asp-for="PrimerApellido" type="text" class="input1" id="inputtext">
                </div>
                <div class="col-md-3">
                    <label for="inputAddress" class="form-label">Segundo Apellidos</label>
                    <input asp-for="SegundoApellido"  type="text" class="input1" id="inputtext">
                </div>
                <div class="col-md-6">
                <label for="inputAddress2" class="form-label">Correo</label>
                    <input asp-for="Email" type="email" class="input1" id="inputtext">
            </div>
            

                <div class="col-md-3">
                    <label for="inputState" class="form-label">Genero</label>
                    @Html.DropDownList("IdGenero", new SelectList(ViewBag.genero, "IdGenero", "Genero1"), new {@class="form-control dropdown"})

                </div>
                <div class="col-md-3">
                    <label for="inputAddress" class="form-label">Contraseña</label>
                    <input asp-for="Password" type="text" class="input1" id="inputtext">
                </div>
                <!--boton pdf -->
                <div class="col-md-6">
                   <div class="row">
                       <div class="col-md-3">
                            <label for="inputAddress2" class="form-label">Certificado Electoral</label>
                       </div>
                       <div class="col-md-9">
                            <input type="file"  id="inputtext" placeholder="Subir pdf">
                      </div>
                   </div>                
                </div>


                
                 <div class="col-md-6">
                    <label for="inputState" class="form-label">Exposicion de Seguridad Informatica</label>
                    @Html.DropDownList("IdPrograma", new SelectList(ViewBag.programa, "IdPrograma", "Programa1"), new {@class="form-control dropdown"})

                </div>

            <div class="col-12">
                <button type="submit" class="boton">
                    Actualizar
                </button>
            </div>
            </div>
        </form>
    </div>

    </div>


